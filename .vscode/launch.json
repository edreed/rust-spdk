    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'spdk'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=spdk"
                ],
                "filter": {
                    "name": "spdk",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'bdev_hello_world'",
            "cargo": {
                "args": [
                    "build",
                    "--example=bdev_hello_world",
                    "--package=spdk",
                    "--features=bdev-malloc"
                ],
                "filter": {
                    "name": "bdev_hello_world",
                    "kind": "example"
                }
            },
            "args": [
                "--iova-mode=va",
                "--huge-dir=/mnt/hugepages",
                "--logflag=all"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
